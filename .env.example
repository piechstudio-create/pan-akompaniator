# ============================================
# FAZA 1: SETUP & KONFIGURACJA - PAN AKOMPANIATOR
# WordPress Headless + Next.js Frontend
# ============================================

# ========== NEXT.JS APPLICATION ==========
NEXT_PUBLIC_APP_NAME=Pan Akompaniator
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_DESCRIPTION=Profesjonalna platforma edukacyjno-handlowa dla wokalistów
NODE_ENV=development

# ========== WORDPRESS BACKEND (Headless) ==========
# URL do Twojego WordPress (OVH hosting)
NEXT_PUBLIC_WP_API_URL=https://panakompaniator.pl
NEXT_PUBLIC_WP_API_ENDPOINT=https://panakompaniator.pl/wp-json

# WordPress REST API Authentication (Basic Auth or Application Passwords)
WP_API_USERNAME=your_wp_username
WP_API_PASSWORD=your_app_password_here

# Application Password: Vygeneruj w WordPress Admin > Użytkownicy > Profil > Hasla aplikacji

# ========== JWT AUTHENTICATION (Phase 1 Priority) ==========
# JWT Secret Key - CHANGE IN PRODUCTION!
NEXT_AUTH_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
NEXT_PUBLIC_JWT_SECRET=your-public-jwt-key-if-needed

# JWT Configuration
JWT_EXPIRATION=7d
JWT_REFRESH_EXPIRATION=30d
JWT_ALGORITHM=HS256

# NextAuth.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-here

# ========== WOOCOMMERCE CONFIGURATION ==========
# WooCommerce REST API Keys
WOO_CONSUMER_KEY=ck_your_consumer_key_here
WOO_CONSUMER_SECRET=cs_your_consumer_secret_here

# Generate at: WordPress Admin > WooCommerce > Settings > Advanced > REST API > Add Key
NEXT_PUBLIC_WOO_API_ENDPOINT=https://panakompaniator.pl/wp-json/wc/v3
WOO_API_ENDPOINT=https://panakompaniator.pl/wp-json/wc/v3

# ========== LEARNDASH LMS CONFIGURATION ==========
# LearnDash REST API (if using LearnDash)
LD_API_ENDPOINT=https://panakompaniator.pl/wp-json/ldlms/v2
LD_API_KEY=your_learndash_api_key_here

# ========== DATABASE (PostgreSQL for Next.js) ==========
# Optional: If using Prisma ORM for Next.js data
DATABASE_URL=postgresql://user:password@localhost:5432/pan_akompaniator

# ========== AUTHENTICATION & SECURITY ==========
# Session Configuration
NEXT_PUBLIC_AUTH_ENABLED=true
AUTH_SECRET=your_auth_secret_key_here
AUTH_TRUST_HOST=localhost

# CORS Configuration
NEXT_PUBLIC_API_CORS_ORIGIN=http://localhost:3000
API_CORS_ORIGIN=http://localhost:3000

# ========== VERCEL DEPLOYMENT ==========
VERCEL_ENV=development
VERCEL_PROJECT_ID=your_vercel_project_id
VERCEL_ORG_ID=your_vercel_org_id

# Production URLs
PRODUCTION_URL=https://pan-akompaniator.vercel.app
PRODUCTION_WP_URL=https://panakompaniator.pl

# ========== FEATURE FLAGS (Phase 1) ==========
NEXT_PUBLIC_FEATURE_PAYMENTS=true
NEXT_PUBLIC_FEATURE_COURSES=true
NEXT_PUBLIC_FEATURE_TRACKS=true
NEXT_PUBLIC_FEATURE_USER_DASHBOARD=true
NEXT_PUBLIC_FEATURE_AI_ASSISTANT=false  # Enabled in Phase 3

# ========== LOGGING & MONITORING (Phase 1 - Basic) ==========
NEXT_PUBLIC_LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# ========== CI/CD GITHUB ACTIONS ==========
# These will be set in GitHub Secrets
GITHUB_TOKEN=your_github_token_for_ci_cd
GHCR_USERNAME=piechstudio-create
GHCR_TOKEN=your_github_container_registry_token
